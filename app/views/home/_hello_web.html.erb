<script type="text/processing" target="processing-canvas">
int nbOfHorizontalLines = 50;
int nbOfVerticalLines = 50;

void setup()
{
  size (1000,1000);
}

void draw()
{
  background (250,250,250);
  stroke(38,38.38);

  float distanceBetweenHorizontalLines = (float)(height - 1)/(nbOfHorizontalLines;
  float distanceBetweenVerticalLines = (float)(width -1)/nbOfVerticalLines;

  for(int i = 0; i < nbOfHorizontalLines; i++)
  {
    line(0, i*distanceBetweenHorizontalLines, width, i*distanceBetweenHorizontalLines);
  }

  for(int i = 0; i < nbOfVerticalLines; i++)
  {
    line (i*distanceBetweenVerticalLines,0,i*distanceBetweenVerticalLines, height);
  }
}
</script>
<canvas id="processing-canvas"> </canvas>