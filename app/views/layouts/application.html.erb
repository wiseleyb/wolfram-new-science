<!DOCTYPE html>
<html>
  <head>
    <title>Wolfram</title>
    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "processing-1.3.6.js" %>
    <%= csrf_meta_tags %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->

    <!-- Le styles -->
    <%= stylesheet_link_tag "application", :media => "all" %>

    <!-- Le fav and touch icons -->
    <link href="/favicon.ico" rel="shortcut icon">
    <% 
    # <link href="images/apple-touch-icon.png" rel="apple-touch-icon">
    # <link href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon" sizes="72x72">
    # <link href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon" sizes="114x114">
    %>
  </head>
  <body>

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
          <div class="container-fluid">
          <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="/">Wolfram</a>
          <div class="container-fluid nav-collapse">
            <ul class="nav">
                <!--
                <li><%= link_to "Link1", "/path1"  %></li>
                <li><%= link_to "Link2", "/path2"  %></li>
                <li><%= link_to "Link3", "/path3"  %></li>
                -->
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span3">
          <div class="well sidebar-nav">
            <%=form_tag "/home/show/1", :remote => true, :id => "patternForm" do |f| %>
              <%
              rect = 30
              rect_off = "#D6D4D5"
              rect_on  = "#121212"
              rules = []
              rules << [1,1,1, 0]
              rules << [1,1,0, 0]
              rules << [1,0,1, 0]
              rules << [1,0,0, 1]
              rules << [0,1,1, 1]
              rules << [0,1,0, 1]
              rules << [0,0,1, 1]
              rules << [0,0,0, 0]
              %>
              <%=hidden_field_tag "rectOn", rect_on %>
              <%=hidden_field_tag "rectOff", rect_off %>
              <p><small>click the bottom boxes to change the pattern</small></p>
              <ul class="nav nav-list">
                <li class="nav-header">Pattern</li>
                <% rules.each_with_index do |rule, idx| %>
                  <li>
                    <canvas id="canvasRule<%=idx%>" width="<%=rect*4%>" height="<%=rect*3%>"></canvas>
                    <script>
                      var c=document.getElementById("canvasRule<%=idx%>");
                      var context=c.getContext("2d");
                      <% 3.times do |i| %>
                        <% clr = rule[i] == 1 ? rect_on : rect_off %>
                        context.beginPath();
                        context.rect(<%= i * rect%>,0,<%= rect - 3%>,<%=rect -3%>);
                        context.fillStyle = '<%=clr%>';
                        context.fill();
                        context.closePath();
                        // context.lineWidth = 1;
                        // context.strokeStyle = 'black';
                        // context.stroke();
                      <% end %>
                      <% clr = rule.last == 1 ? rect_on : rect_off %>
                      context.beginPath();
                      context.rect(<%= rect%>,<%= rect%>,<%= rect - 3%>,<%=rect -3%>);
                      context.fillStyle = '<%=clr%>';
                      context.fill();
                      // context.lineWidth = 1.5;
                      // context.strokeStyle = '#95D3F5';
                      // context.stroke();                      
                      context.closePath();
                      c.addEventListener('click', function(e) {
                          console.log('click: ' + e.offsetX + '/' + e.offsetY);
                          if (e.offsetX > <%=rect%> && e.offsetX < <%=rect * 2%> && e.offsetY > <%=rect%> && e.offsetY < <%=rect * 2%>) {
                            var c=document.getElementById("canvasRule<%=idx%>");
                            var context=c.getContext("2d");
                            console.log($('#rule<%=idx%>').val());
                            context.beginPath();
                            context.rect(<%= rect%>,<%= rect%>,<%= rect - 3%>,<%=rect -3%>);
                            if ($('#rule<%=idx%>').val() == 1) {
                              $('#rule<%=idx%>').val(0)
                              context.fillStyle = $('#rectOff').val();
                            } else {
                              $('#rule<%=idx%>').val(1)
                              context.fillStyle = $('#rectOn').val();
                            }
                            context.fill();
                            // context.lineWidth = 1.5;
                            // context.strokeStyle = '#95D3F5';
                            // context.stroke();                      
                            context.closePath();
                            $('#patternForm').submit();
                          }
                      }, false);
                    </script>
                    <%=hidden_field_tag "rule#{idx}", rule[3] %>
                  </li>
                <% end %>
              </ul>
            <% end %>
          </div><!--/.well -->
        </div><!--/span-->
        <div class="span9">
          <%= yield %>
        </div>
      </div><!--/row-->

      <footer>
        <p>&copy; Company 2012</p>
      </footer>

    </div> <!-- /container -->

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag "application" %>

  </body>
</html>
